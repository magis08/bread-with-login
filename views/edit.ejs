<%- include('partials/header.ejs') %>
    <div class="card">
        <div class="card-header text-center">
            <h1>Update Data</h1>
        </div>
        <div class="card-body">
            <form action="/todos/edit/<%= todo.id %>" method="post">
                <div class="row mb-3">
                    <label for="title" class="col-sm-2 col-form-label">Title</label>
                    <div class="col-sm-10">
                        <input type="title" class="form-control" id="title" name="title" value="<%= todo.title %>">
                    </div>
                </div>
                <div class="row mb-3">
                    <label for="deadline" class="col-sm-2 col-form-label">Deadline</label>
                    <div class="col-sm-10">
                        <input type="datetime-local" class="form-control" name="deadline" value="<%= moment(todo.deadline).format('YYYY-MM-DDThh:mm') %>">
                    </div>
                </div>
                <div class="row mb-3">
                    <label for="complete" class="col-sm-2 col-form-label">Complete</label>
                    <div class="col-sm-10">
                        <input class="form-check-input" type="radio" name="complete" id="complete" value="1"
                            <%=todo.complete ? 'checked' : '' %>>
                        <label class="form-check-label" for="complete">Complete</label>

                        <input class="form-check-input" type="radio" name="complete" id="incomplete" value="0"
                            <%=!todo.complete ? 'checked' : '' %>>
                        <label class="form-check-label" for="incomplete">Incomplete</label>
                    </div>
                </div>

        </div>
        </fieldset>
        <div class="card-footer">
            <button type="submit" class="btn btn-primary"><i class="fa-solid fa-upload"></i></button>
            <a href="/todos" class="btn btn-warning"><i class="fa-solid fa-ban"></i></a>
        </div>
        </form>
        <%- include('partials/alert.ejs') %>
    </div>

    <%- include('partials/footer.ejs') %>